<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 mx-auto">
        <h1>Realizar Compra</h1>
        <h4>Total: ${{total}}</h4>
        <div id="charge-error" class="alert alert-danger {{#if noError}}d-none{{/if}}">
            {{errMsg}}
        </div>
        <form action="/confirmacion" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Direcci√≥n</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input type="email" id="email" class="form-control" required name="email">
                    </div>
                </div>
                <hr>
            </div>
            <button type="submit" class="btn btn-primary">Pagar Ahora</button>
            <a href="/shopping-cart" type="button" class="btn btn-primary">Regresar</a>
        </form>
    </div>
</div>
